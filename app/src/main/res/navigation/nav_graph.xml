<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
	  xmlns:app="http://schemas.android.com/apk/res-auto"
	  xmlns:tools="http://schemas.android.com/tools"
	  android:id="@+id/nav_graph"
	  app:startDestination="@id/launchFragment">

	<fragment
		  android:id="@+id/splashFragment"
		  android:name="com.itscryo.hermes.splash.SplashFragment"
		  android:label="fragment_splash"
		  tools:layout="@layout/fragment_splash" >
		<action
			  android:id="@+id/action_splashFragment_to_authFragment"
			  app:destination="@id/authFragment" />
	</fragment>
	<fragment
		  android:id="@+id/launchFragment"
		  android:name="com.itscryo.hermes.launch.launchFragment"
		  android:label="fragment_launch"
		  tools:layout="@layout/fragment_launch" >
		<action
			  android:id="@+id/action_launchFragment_to_splashFragment"
			  app:destination="@id/splashFragment" />
		<action
			  android:id="@+id/action_launchFragment_to_inboxFragment"
			  app:destination="@id/inboxFragment" />
	</fragment>
	<fragment
		  android:id="@+id/authFragment"
		  android:name="com.itscryo.hermes.auth.AuthFragment"
		  android:label="fragment_auth"
		  tools:layout="@layout/fragment_auth" >
		<action
			  android:id="@+id/action_authFragment_to_inboxFragment"
			  app:destination="@id/inboxFragment" />
	</fragment>
	<fragment
		  android:id="@+id/inboxFragment"
		  android:name="com.itscryo.hermes.inbox.InboxFragment"
		  android:label="InboxFragment"
		  tools:layout="@layout/fragment_inbox"
		  />
</navigation>