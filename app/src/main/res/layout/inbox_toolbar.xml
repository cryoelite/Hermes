<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
	  xmlns:app="http://schemas.android.com/apk/res-auto"
	  android:layout_width="match_parent"
	  android:layout_height="match_parent">

	<androidx.appcompat.widget.Toolbar
		  android:id="@+id/inbox_toolbar"
		  android:layout_width="0dp"
		  android:layout_height="@dimen/bar_height"
		  android:background="@color/hot_pink"
		  android:minHeight="?attr/actionBarSize"
		  android:tag="@string/app_name"
		  android:theme="@style/TitleStyle"
		  app:buttonGravity="center_vertical"
		  app:layout_constraintEnd_toEndOf="parent"
		  app:layout_constraintStart_toStartOf="parent"
		  app:layout_constraintTop_toTopOf="parent"
		  app:menu="@menu/inbox_menu"
		  app:title="@string/app_name"
		  app:titleTextAppearance="@style/TitleStyle"
		  app:titleTextColor="@color/slight_white" />


</androidx.constraintlayout.widget.ConstraintLayout>